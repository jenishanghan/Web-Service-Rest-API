@model WebApplication1.Models.CountryModels
@{
    ViewBag.Title = "Coutry Page";
}
@Html.Hidden("GetCurrencyModel")

<div ng-controller="countryController">
    <div class="form-group">
        @Html.LabelFor(a => a.countryName, new { @class = "col-lg-3 col-sm-2 control-label required" })
        <div class="col-lg-9">
            @Html.TextBoxFor(m => m.countryName, new
       {
           data_ng_model = "GetCurrencyModel.countryName",
           @class = "form-control",
           id = "fn",
           placeholder = "Enter Country Name Here",
           focus = "true",
           spacenotonfirst = "",
       })
            @Html.ValidationMessageFor(m => m.countryName)

        </div>
    </div>
    <div ng-if="GetCurrencyModel.IsSuccess">
        <label><b>Currency is : </b></label> <label id="result" data-ng-bind="GetCurrencyModel.currencyName"></label>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" id="btnSubmit" value="Add" class="btn btn-success" data-ng-click="GetCurrency()" />
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/assets/js/countryjs")
}


